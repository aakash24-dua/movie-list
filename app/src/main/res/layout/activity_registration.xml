<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f2f2f2"
    android:padding="16dp">




    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_register"
        >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/app_icon"/>



            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="First Name *"
                android:layout_marginTop="@dimen/_12sdp"
                android:padding="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/app_icon"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="Last Name"
                android:padding="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintVertical_chainStyle="packed" />



            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="Mobile Number *"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/last_name"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/editTextMobile"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/org_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="Organisation *"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/email"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="Designation *"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/org_name"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/arrival_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="Arrival Date *"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/designation"
                app:layout_constraintVertical_chainStyle="packed" />


            <TextView
                android:id="@+id/departure_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="Departure Date *"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/arrival_flight_no"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/arrival_flight_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="Arrival Flight No *"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/arrival_date"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/departure_flight_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blue_bg_radius8"
                android:hint="Departure Flight No *"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                app:layout_constraintTop_toBottomOf="@+id/departure_date"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_site_seeing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12sdp"
                android:textSize="@dimen/_12ssp"
                android:hint="@string/select_items"
                android:visibility="gone"
                android:background="@drawable/blue_bg_radius8"
                android:layout_marginTop="@dimen/_16sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/color_190A28"
                android:prompt="@string/select_items"
                app:layout_constraintTop_toBottomOf="@+id/departure_flight_no"
                android:entries="@array/cities"/>




